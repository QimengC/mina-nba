.header {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box; 
}

.active {
  display: block;
  width: 20%;
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 0;
  color: green;
}

.active-no {
  display: block;
  width: 20%;
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0;
  color: #333;
}

.content {
  width: 100%;
}

.content-head {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 70rpx;
  background: #f5f5f5;
  font-size:28rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.content-head-center {
  display: block;
  width: 30%;
  text-align: left;
  line-height: 70rpx;
}

.content-head-text {
  display: block;
  width: 40%;
  text-align: center;
  line-height: 70rpx;
}

.content-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 70rpx;
  font-size:28rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  flex-wrap: nowrap;
}


