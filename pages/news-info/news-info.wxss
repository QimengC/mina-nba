/* pages/news-info/news-info.wxss */
.header {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.title {
  color: black;
  font-size: 36rpx;
  font-weight: bold
}

.content {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
  box-sizing: border-box;
}


.comment {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.comment-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 70rpx;
  padding: 0 10rpx;
}

.title-bg {
  width: 8rpx;
  height: 40rpx;
  background-color: green;
}

.comment-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
}

.comment-avater {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10rpx;
  flex-shrink: 0;
}

.comment-text {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-left: 15rpx;
}